{
    "name": "amenophis/elasticsearch",
    "description": "Elasticsearch utilities",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy Leherpeur",
            "email": "amenophis@leherpeur.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Amenophis\\Elasticsearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Amenophis\\Elasticsearch\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3",
        "elasticsearch/elasticsearch": "^7.3",
        "guzzlehttp/ringphp": "^1.1.1",
        "react/promise": "^2.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^8.4",
        "phpspec/prophecy": "^1.9.0",
        "symfony/framework-bundle": "^4.3",
        "symfony/var-dumper": "^4.3",
        "symfony/yaml": "^4.3"
    },
    "suggest": {
        "symfony/framework-bundle": "If you want to use the Symfony Bridge bundle"
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
